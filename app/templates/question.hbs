<div class="container">
  <div class="row">
    <div class="col s12 m12">
      {{question-detail question=model session=session editQuestion='editQuestion'}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s10 offset-s1 m10 offset-m1">
      {{#each model.answers as |answer|}}
        {{answer-tile answer=answer}}
      {{/each}}
    </div>
  </div>
</div>

{{#if session.isAuthenticated}}
  <div class="container">
    <div class="row">
      <div class="col s10 offset-s1 m10 offset-m1">
        <hr>
        {{answer-new session=session question=model saveAnswer="saveAnswer"}}
      </div>
    </div>
  </div>
{{/if}}
