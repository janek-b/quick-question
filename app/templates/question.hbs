<div class="container">
  <div class="row">
    <div class="col s12 m10">
      {{question-detail question=model}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col s10 offset-s1 m9 offset-m1">
      {{#each model.answers as |answer|}}
        {{answer-tile answer=answer}}
      {{/each}}
    </div>
  </div>
</div>

{{#if session.isAuthenticated}}
  <div class="container">
    <div class="row">
      <div class="col s10 offset-s1 m9 offset-m1">
        <hr>
        {{answer-new session=session question=model saveAnswer="saveAnswer"}}
      </div>
    </div>
  </div>
{{/if}}
