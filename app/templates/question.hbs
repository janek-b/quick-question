{{#if (is-owner model.user.userID)}}
  {{question-edit question=model session=session editQuestion='editQuestion' deleteQuestion='deleteQuestion'}}
{{else}}
  {{question-detail question=model session=session}}
{{/if}}


{{#each model.answers as |answer|}}
  {{#if (is-owner answer.user.userID)}}
    {{answer-edit answer=answer editAnswer='editAnswer' deleteAnswer='deleteAnswer'}}
  {{else}}
    {{answer-tile answer=answer}}
  {{/if}}
{{/each}}


{{#if session.isAuthenticated}}
  <div class="container">
    <div class="row">
      <div class="col s10 offset-s1 m10 offset-m1">
        <hr>
        {{answer-new session=session question=model saveAnswer="saveAnswer"}}
      </div>
    </div>
  </div>
{{/if}}
