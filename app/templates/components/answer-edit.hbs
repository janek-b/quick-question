<div class="container">
  <div class="row">
    <div class="col s10 offset-s1 m10 offset-m1">

      <div class="card small blue-grey">
        <div class="card-content white-text">
          <span class="card-title activator text-capitalize"><i class="material-icons right">edit</i></span>
          <blockquote>{{answer.body}}</blockquote>
          <div class="card-action">
            {{#link-to 'user' answer.user.id}}
              <div class="chip hoverable left">
                <img src={{answer.user.photoURL}} alt={{answer.user.name}}>
                {{answer.user.name}}
              </div>
            {{/link-to}}
            <div class="right">
              <p>{{time-format answer.timestamp}}</p>
              {{#if answer.edit}}
                <p><small>edited {{time-format answer.edit}}</small></p>
              {{/if}}
            </div>
          </div>
        </div>
        <div class="card-reveal">
          <div class="row">
            <span class="card-title grey-text text-darken-4">Edit Answer<i class="material-icons right">close</i></span>
            <form class="col s12" {{action "editAnswer" answer on="submit"}}>
              <div class="row">
                <div class="input-field col s12">
                  {{textarea value=answer.body class="materialize-textarea"}}
                  <label for="body" class="active">Your Answer</label>
                </div>
                <div class="col s12">
                  <button id="answer-edit-btn" class="btn waves-effect waves-light card-title left" type="submit">Submit</button>
                  <button data-target="{{answer.id}}Modal" class="waves-effect waves-light btn red right"><i class="material-icons">delete_forever</i></button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<div id="{{answer.id}}Modal" class="modal">
  <div class="modal-content">
    <h4>Are you sure you want to delete this answer?</h4>
  </div>
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-light btn left">Cancel</a>
    <a class="modal-action modal-close waves-effect waves-light btn red right" {{action 'deleteAnswer' answer}}>DELETE<i class="material-icons right">delete_forever</i></a>
  </div>
</div>
