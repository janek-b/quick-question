<div class="row">
  <form class="col s12" {{action "editQuestion" question on='submit'}}>
    <div class="row">
      <div class="input-field col s12">
        {{input value=question.title type="text" class="validate" required=true}}
        <label for="title" class="active">Title</label>
      </div>
      <div class="input-field col s12">
        {{textarea value=question.body class="materialize-textarea"}}
        <label for="body" class="active">Additional Details</label>
      </div>
      <div class="col s12">
        <button id="edit-submit-btn" class="btn waves-effect waves-light card-title left" type="submit">Submit</button>
        <a class="waves-effect waves-light btn red right modal-trigger" href="#deleteModal"><i class="material-icons">delete_forever</i></a>
      </div>
    </div>
  </form>
</div>

<div id="deleteModal" class="modal bottom-sheet">
  <div class="modal-content">
    <h4>Are you sure you want to delete this question?</h4>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat" {{action 'delete' question}}>DELETE<i class="material-icons right">delete_forever</i></a>
  </div>
</div>
