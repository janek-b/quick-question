<div class="container">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a href="#questions">Questions</a></li>
        <li class="tab col s6"><a href="#answers">Answers</a></li>
      </ul>
      <div id="questions" class="col s12">
        {{#each user.questions as |question|}}
          {{question-tile question=question}}
        {{/each}}
      </div>
      <div id="answers" class="col s12">
        {{#each-in questionsAnswered as |question answers|}}
          <div class="row">
            <div class="col s12">
              {{question-tile question=answers.question}}
            </div>
            {{#each answers.answers as |answer|}}
              <div class="col s11 offset-s1">
                {{answer-tile answer=answer}}
              </div>
            {{/each}}
          </div>
        {{/each-in}}
      </div>
    </div>
  </div>
</div>
